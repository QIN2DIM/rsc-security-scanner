{
  "manifest_version": 3,
  "name": "RSC Fingerprint Detector",
  "version": "1.0",
  "description": "检测 React Server Components (RSC) 及 Next.js App Router 指纹",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "rsc-detector@example.com",
      "strict_min_version": "109.0"
    }
  },
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "RSC Detector"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
